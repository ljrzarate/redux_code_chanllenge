<div class="js-new-post border p-3">
  <p>New Post:</p>
  <%= form_with(model: @post, url: posts_path) do |f| %>
    <%= f.text_area :content, class: "js-new-post-content" %>
    <%= f.submit "send", class: "btn btn-primary", style: "font-size: 17px;" %>
  <%- end %>
</div>

<%= javascript_include_tag "posts/new" %>
